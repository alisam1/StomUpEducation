                                     {% set dateEnd = my_event.event_end_time|date('d.m.Y') %}
                                     {% set timeStart = my_event.event_start_time|date('H:i') %}
                                     {% set timeEnd = my_event.event_end_time|date('H:i') %}

                                            <div class="lectures-group__block block">
                                            <a class="ahref__noslyle" href="/events/{{ my_event.id }}">
                                                <div class="block__top" style="background-image:url({{ my_event.event_main_img }});">
                                                    <div class="block__when">
                                                    <div class="block__data">
                                                    {% if dateStart == dateEnd %}
                                                      {{ dateStart }}
                                                    {% else %}
                                                      {{dateStart}}-{{dateEnd}}
                                                    {% endif %}
                                                    </div>
                                                    <div class="block__time">{{timeStart}} - {{timeEnd}}</div>
                                                    </div>
                                                    <div class="block__address">{{my_event.event_city}}, {{my_event.event_address}}</div>
                                                </div>
                                                </a>
                                                <div class="block__bottom">
                                                <a class="ahref__noslyle" href="/events/{{ my_event.id }}">
                                                    <div class="block__high">
                                                        <div class="block__topic block__topic--card"><span class="block__dot block__dot--paradont" style="background:{{my_event.color}}"></span>{{my_event.way_name}}</div>
                                                        <div class="block__type">{{my_event.type_name}}</div>
                                                    </div>
                                                    <div class="block__center">
                                                        <div class="block__title">{{event.event_name|str30()|beautifultext()}}
                                                            <span class="block__tooltip">{{event.event_name}}</span>
                                                        </div>
                                                        <div class="block__price">
                                                        {% if my_event.is_free == 1 %}
                                                          {{ my_event.price }} ₽
                                                        {% else %}
                                                        Бесплатно
                                                        {% endif %}
                                                        </div>
                                                    </div>
                                                    </a>
