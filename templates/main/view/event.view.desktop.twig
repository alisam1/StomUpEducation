                                                            <div class="block__fio">
                                                                <div class="block__name">{{my_event.full_name|short_name()}}</div>
                                                                <div class="block__work">{{my_event.worker_position|onlyone()}}</div>
                                                            </div>
                                                        </div>

                                                        <div class="block__add">
                                                        {% if my_event.rule_point > 0 %}
                                                            <div class="block__star">{{my_event.rule_point}}</div>
                                                        {% endif %}
                                                        {% if my_event.rule_sertificate is not null %}
                                                            <div class="block__sert">Сертификат</div>
                                                        {% endif %}
                                                            <div class="block__more"><a class="ahref__noslyle" href="/events/{{ my_event.id }}">еще</a></div>
                                                        </div>

                                                    </div>
                                                </div>

                                            </div>
